<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Choice"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:background="@drawable/backg">

    <TextView
        android:paddingTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/baloo_chettan"
        android:text="Dash Board"
        android:textColor="#0E0E0E"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginBottom="300dp"
        tools:ignore="MissingConstraints" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="80dp"
    tools:ignore="MissingConstraints">
    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="98dp">


        <Button
            android:id="@+id/account"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:background="@drawable/bgbot"
            android:fontFamily="@font/baloo_chettan"
            android:text="Account"
            android:textAlignment="center"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/prgbar1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:visibility="gone" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="207dp"
        tools:layout_editor_absoluteY="98dp">


        <Button
            android:id="@+id/editt"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:background="@drawable/bgbot"
            android:fontFamily="@font/baloo_chettan"
            android:text="Edit"
            android:textAlignment="center"
            android:textSize="20sp" />


        <ProgressBar
            android:id="@+id/prgbar2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:visibility="gone" />

    </FrameLayout>
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="250dp"
        tools:ignore="MissingConstraints">
    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="294dp">


        <Button
            android:id="@+id/commentbott"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:background="@drawable/bgbot"
            android:fontFamily="@font/baloo_chettan"
            android:text="Comment"
            android:textAlignment="center"
            android:textSize="19sp" />

        <ProgressBar
            android:id="@+id/prgbar3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:visibility="gone" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="207dp"
        tools:layout_editor_absoluteY="293dp">


        <Button
            android:id="@+id/aboutt"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:background="@drawable/bgbot"
            android:fontFamily="@font/baloo_chettan"
            android:text="About Us"
            android:textAlignment="center"
            android:textSize="20sp" />


        <ProgressBar
            android:id="@+id/prgbar4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:visibility="gone" />

    </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>